<div class="panel panel-default list">
  <div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th class="sorters">#</th>
          <th><%= Material.human_attribute_name('name') %></th>
          <th><%= Material.human_attribute_name('amount') %></th>
          <th><%= Material.human_attribute_name('description') %></th>
          <th class="actions">
            <%= link_to t('buttons.new'), new_material_path, class: 'btn btn-xs btn-primary', width: '100%' %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @materials.each_with_index do |material, index| %>
        <tr>
          <th class="sorters text-info"><%= row_number(index, @materials.limit_value) %></th>
          <td><%= material.name %></td>
          <td><%= material.amount %></td>
          <td><%= material.description %></td>
          <td class="actions">
            <div class="btn-group btn-group-xs">
              <%= link_to edit_material_path(material), class: 'btn btn-default' do %>
                <span class="glyphicon glyphicon-edit text-info" aria-hidden="true"></span>
              <% end %>
              <%= link_to material, method: :delete, data: { confirm: t('messages.confirm', name: material.name ) }, class: 'btn btn-default' do %>
                <span class="glyphicon glyphicon-trash text-danger" aria-hidden="true"></span>
              <% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer clearfix">
    <p class="pagination-info"><%= page_entries_info @materials %></p>
    <%= paginate @materials, window: 1 %>
  </div>
</div>
