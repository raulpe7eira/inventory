<div class="panel-body">
  <%= form_for(material) do |f| %>
    <% if material.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= "#{pluralize(material.errors.count, t('labels.error', count: material.errors.count))}: #{t('messages.error')}" %></h2>
      <ul>
        <% material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="row">
      <div class="col-xs-6">
        <div class="form-group form-group-sm">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="col-xs-6">
        <div class="form-group form-group-sm">
          <%= f.label :amount %>
          <%= f.number_field :amount, step: 1, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group form-group-sm">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 4, class: 'form-control' %>
    </div>

    <%= f.hidden_field :user_id %>

    <div class="panel-footer">
      <%= f.submit t('buttons.save'), class: 'btn btn-sm btn-primary' %>
      <%= link_to t('buttons.cancel'), materials_path, class: 'btn btn-sm btn-default' %>
    </div>
  <% end %>
</div>
